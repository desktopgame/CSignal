namespace beacon::unsafe {
	class Time {
		public:
		property Int second {
			defset; defget;
		}
		property Int minute {
			defset; defget;
		}
		property Int hour {
			defset; defget;
		}
		property Int day {
			defset; defget;
		}
		property Int month {
			defset; defget;
		}
		property Int year {
			defset; defget;
		}
		property Int dayOfWeek {
			defset; defget;
		}
		property Int dayOfYear {
			defset; defget;
		}

		def new() {
			this.rawTime = nativeRawTime();
		}

		def static now() -> Time {
			var time = new Time();
			time.second = nativeGetSecond(time.rawTime);
			time.minute = nativeGetMinute(time.rawTime);
			time.hour = nativeGetHour(time.rawTime);
			time.day = nativeGetDay(time.rawTime);
			time.year = nativeGetYear(time.rawTime);
			time.dayOfWeek = nativeGetDayOfWeek(time.rawTime);
			time.dayOfYear = nativeGetDayOfYear(time.rawTime);
			return time;
		}

		def toString() -> String {
			return nativeToString();
		}

		private:
		Long rawTime;
		def static native nativeRawTime() -> Long;
		def native nativeToString() -> String;
		def static native nativeGetSecond(Long rawTime) -> Int;
		def static native nativeGetMinute(Long rawTime) -> Int;
		def static native nativeGetHour(Long rawTime) -> Int;
		def static native nativeGetDay(Long rawTime) -> Int;
		def static native nativeGetYear(Long rawTime) -> Int;
		def static native nativeGetDayOfWeek(Long rawTime) -> Int;
		def static native nativeGetDayOfYear(Long rawTime) -> Int;
	}
}