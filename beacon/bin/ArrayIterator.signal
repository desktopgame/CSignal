import "Iterator"
import "Array"

namespace signal.lang {
	class ArrayIterator<|T|> : Iterator<|T|> {
		private:
		Array<|T|> source;
		Int offset;

		public:
		ctor new(Array<|T|> source) {
			this.source = source;
			this.offset = 0;
		}

		def hasNext() -> Bool {
			return offset < source.length();
		}

		def next() -> T {
			var ret = source.get(offset);
			this.offset = offset + 1;
			return ret;
		}
	}
}