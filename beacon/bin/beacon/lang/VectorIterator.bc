require "beacon/lang/Iterator"
require "beacon/lang/Vector"

namespace beacon::lang {
	class VectorIterator[T] : Iterator[T] {
		private:
		Vector[T] source;
		Int offset;

		public:
		def new(Vector[T] source) {
			this.source = source;
			this.offset = -1;
		}

		def moveNext() -> Bool {
			this.offset += 1;
			if(offset >= source.length()) {
				return false;
			}
			return true;
		}

		def current() -> T {
			return source.get(offset);
		}
	}
}