{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "GenerateParser",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src/beacon/parse"
			},
			"command": "go run script/gen.go"
		},
		{
			"label": "GenerateDocument",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "ruby auto/doxy.rb"
		},
		{
			"label": "CMake(None)",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "cmake",
			"args": [
				"-D", "JNI_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include",
				"-D", "JNI_NATIVE_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include/darwin",
				"."
			],
			"problemMatcher": []
		},
		{
			"label": "CMake(Debug)",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "cmake",
			"args": [
				"-D", "CMAKE_BUILD_TYPE=Debug",
				"-D", "JNI_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include",
				"-D", "JNI_NATIVE_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include/darwin",
				"."
			],
			"problemMatcher": []
		},
		{
			"label": "CMake(Release)",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "cmake",
			"args": [
				"-D", "CMAKE_BUILD_TYPE=Release",
				"-D", "JNI_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include",
				"-D", "JNI_NATIVE_INCLUDE_DIR=/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home/include/darwin",
				"."
			],
			"problemMatcher": []
		},
		{
			"label": "Make",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "make",
			"problemMatcher": []
		},
		{
			"label": "Test",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "make",
			"args": [
				"test", "ARGS='-V'"
			],
			"problemMatcher": []
		},
		{
			"label": "Clean",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "make",
			"args": [
				"clean"
			]
		},
		{
			"label": "Install",
			"type": "shell",
			"options": {
				"cwd": "../beacon/beacon/src"
			},
			"command": "sudo make install",
		},
	]
}